<!--Let browser know website is optimized for mobile-->
<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
<!--Import materialize.css-->
<link type="text/css" rel="stylesheet" href="stylesheets/materialize.min.css"  media="screen,projection"/>
<link type="text/css" rel="stylesheet" href="stylesheets/materialize.css"  media="screen,projection"/>
<link type="text/css" rel="stylesheet" href="stylesheets/animate.css"/>
<%render 'HojasDeEstilos'%>
<%=render 'barraU'%>
<body class="bodyfondologin">
<section>

<div class="principal  ">
<img <%= image_tag "iniciosesion.png"%>


<div class="centrar">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field ">
      <p>Correo</p>

      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field ">
    <p>Contraseña</p>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"Recordar mi contraseña"%>
      </div>
    <% end -%>

    <div class="actions">
      <%= f.submit "Iniciar Sesion" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
  </div>
  </div>

  <%=render 'scripts'%>
</body>
</section>
